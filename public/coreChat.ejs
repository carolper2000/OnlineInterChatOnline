<!--Div pour les messages + header-->
<div id="convo">
    <%- include('./navBar') %> <!--Ajout de la navbar dans le conteneur flexible car sinon ; bug de layout-->
    <div id="zoneAffichage">
        <ul id="messages"></ul>
        <!--Div pour les erreurs-->
        <div id="errors"class="alert alert-warning" role="alert">
            <%- __('chatroom.loginToChat') %>
        </div>
    </div>
        <!--Div pour les erreurs-->
    <form action="" method="POST" id="chatForm">
        <!--Div de chat (input + btn)-->
        <div id="divform" class="form-row">
            <div id="divinput" class="col-auto">
                <input id="txt" rows="1" class="form-control" autocomplete="off" autofocus="on" placeholder="<%- __('chatroom.typeHere') %>" >
            </div>
            <div id="divbtn" class="col-auto">
                <button class="btn btn-primary"> <%- __('chatroom.send') %> </button>
            </div>
        </div>
                <!--Div de chat (input + btn)-->
    </form>
</div>
